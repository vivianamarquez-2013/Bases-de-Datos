CREATE VIEW VISTAF15 
  AS
    SELECT * FROM FACTURAS_15;

SELECT * FROM VISTAF15;

CREATE SYNONYM OVEJAS
  FOR VISTAF15;

SELECT * FROM OVEJAS;

CREATE SYNONYM PERRITOS
  FOR OVEJAS;

SELECT * FROM PERRITOS;

DROP TABLE FACTURAS_15;

INSERT INTO PERRITOS VALUES(7,8,3000);

