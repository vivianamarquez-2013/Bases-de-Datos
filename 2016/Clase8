CREATE VIEW VISTA1 
  AS 
    SELECT cod_mascota, nom_mascota FROM mascota;


SELECT * FROM VISTA1;

UPDATE VISTA1
  SET nom_mascota='BLUE' WHERE cod_mascota=3;
  

CREATE OR REPLACE VIEW VISTA1
  (codigo, nombre, dueno)
  AS
    SELECT
      cod_mascota, nom_mascota, nom_dueno
    FROM
      mascota;  
      
DELETE FROM VISTA1 WHERE codigo=3;

